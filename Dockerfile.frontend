FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY letter_writer_web/package*.json ./

# Install dependencies
# Using npm install instead of npm ci to allow updating package-lock.json
RUN --mount=type=cache,target=/root/.npm \
    npm install

# Copy application code
COPY letter_writer_web/ ./

# Expose Vite port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]

